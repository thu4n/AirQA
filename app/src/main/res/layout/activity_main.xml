                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="82%"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
                <!-- Unit -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit: μg/m3"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
        <!--Row of a stat-->
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Air Quality Index -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="175dp"
                android:background="@drawable/stat_container"
                android:layout_weight="1.0"
                android:layout_marginRight="10dp"
                android:gravity="center"
                >
                <!-- Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="AQI"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>
                <!-- Number -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="130dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        app:percent="70"
                        app:progressBarColor="@color/white"
                        app:progressBarWidth="10"
                        app:progressPlaceHolderColor="#e5e7eb"
                        app:progressPlaceHolderWidth="10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/inter"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/inter"
                        android:text="500"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <!-- Avg -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"
                        android:layout_below="@+id/progress_bar"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>
            <!-- Pollution -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="175dp"
                android:background="@drawable/stat_container"
                android:layout_weight="1.0"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                >
                <!-- Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/pollu_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pollutants"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>
                <!-- Stats -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="1dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="82%"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="82%"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="1dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="82%"
